{
	"name": "two-mi18n",
	"version": "0.2.0",
	"description": "Minimalist javascript library for internationalization in only two methods. Too minimalist.",
	"files": [
		"dist"
	],
	"main": "./dist/TwoMi18n.umd.js",
	"module": "./dist/TwoMi18n.es.js",
	"exports": {
		".": {
			"import": "./dist/TwoMi18n.es.js",
			"require": "./dist/TwoMi18n.umd.js"
		}
	},
	"scripts": {
		"dev": "vite",
		"test": "vitest run",
		"lint": "eslint lib/*.js test/*.js",
		"prebuild": "npm run lint && npm run test",
		"build": "vite build",
		"preview": "vite preview"
	},
	"keywords": [
		"i18n",
		"translation",
		"translations",
		"minimalist"
	],
	"author": "Nicolas Renault https://nicolasrenault.com",
	"license": "MIT",
	"devDependencies": {
		"eslint": "^8.56.0",
		"vite": "^5.0.11",
		"vitest": "^1.2.1"
	}
}
